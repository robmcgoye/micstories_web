<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h4>Editing Character for <%= @story.short_title %></h4>
      <%= render 'form', character: @character, post_url: character_path(@character) %>
      <div class="btn-group p-2">
        <%= link_to t('show_story'), back_to_story_path(@story.id), class: "btn btn-sm btn-outline-dark" %>
        <%= link_to "All characters", story_characters_path(@story), class: "btn btn-sm btn-outline-dark" %> 
        <%= link_to "Delete", character_path(@character), class: "btn btn-sm btn-outline-dark", 
                    method: :delete, 
                    data: { confirm: "Are you sure? This will delete ALL chats this character posted." } %>
      </div>
    </div>
  </div>
</div>

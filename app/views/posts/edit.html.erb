<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h4>Editing post for <%= @part.chat_title %></h4>
      <%= render 'form', post: @post, post_url: post_path(@post), story_id: @part.chapter.story_id %>
      <div class="btn-group p-2">
        <%= link_to "Delete", post_path(@post), class: "btn btn-sm btn-outline-dark", 
                    method: :delete, 
                    data: { confirm: "Are you sure? This will delete ALL chats, parts from this chapter too." } %>
        <%= link_to t('show_story'), back_to_story_path(@part.chapter.story_id), class: "btn btn-sm btn-outline-dark" %> 
      </div>
    </div>
  </div>
</div>

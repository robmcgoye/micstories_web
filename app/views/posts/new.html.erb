<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h4>New Post for <%= @part.chat_title %></h4>
      <%= render 'form', post: @post, 
                  post_url: part_posts_path(@part),
                  story_id: @part.chapter.story_id %>
      <div class="btn-group p-2">
        <%= link_to t('show_story'), back_to_story_path(@part.chapter.story_id), class: "btn btn-sm btn-outline-dark" %> 
      </div>
    </div>
  </div>
</div>

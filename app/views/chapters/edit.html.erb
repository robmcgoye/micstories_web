

<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h4>Editing chapter for <%= @story.short_title %></h4>
      <%= render 'form', chapter: @chapter, post_url: story_chapter_path(@story, @chapter) %>
      <div class="btn-group p-2">
        <%= link_to "Delete", story_chapter_path(@story, @chapter), class: "btn btn-sm btn-outline-dark", 
                    method: :delete, 
                    data: { confirm: "Are you sure? This will delete ALL chats, parts from this chapter too." } %>
        <%= link_to "Show", @story, class: "btn btn-sm btn-outline-dark" %> 
      </div>
    </div>
  </div>
</div>

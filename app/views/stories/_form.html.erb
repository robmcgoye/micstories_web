
<%= form_with(model: story, mulitpart: true) do |form| %>
  <%= render 'shared/error_messages', resource: story %>
  <div class="row justify-content-end">
   <div class="col-10">
      <div class="form-check form-switch">
        <%= form.check_box :published, 
                  class: "form-check-input", 
                  id: "flexSwitchCheckPublished" %>
        <%= form.label :published,  class: "form-check-label", 
                      for: "flexSwitchCheckPublished" %>        
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-2 d-flex align-items-center">
      <%= form.label :sort_order %>
    </div>
    <div class="col field form-group">
      <%= form.number_field :sort_order, class: "form-control" %>
    </div>
  </div>

  <div class="row pt-2">
    <div class="col-2 d-flex align-items-center">
      <%= form.label :long_title %>
    </div>
    <div class="col field form-group">
      <%= form.text_field :long_title, class: "form-control" %>
    </div>
  </div>
  <div class="row pt-2">
    <div class="col-2 d-flex align-items-center">
      <%= form.label :short_title %>
    </div>
    <div class="col field form-group">
      <%= form.text_field :short_title, class: "form-control" %>
    </div>
  </div>
  <div class="row pt-2">
    <div class="col-2 d-flex align-items-center">
      <%= form.label :author %>
    </div>
    <div class="col field form-group">
      <%= form.text_field :author, class: "form-control" %>
    </div>
  </div>
  <div class="row pt-2">
    <% if form.object.header_picture.present? %>
      <div class="row">
        <div class="col-1"> 
          <%= image_tag form.object.header_picture_url, height: "32", width: "64",
                        alt: form.object.header_picture_identifier %>
        </div>
        <div class="col">
          <small><%= form.object.header_picture_identifier %></small>
        </div>
      </div>
    <% end %>
      <div class="field input-group">
        <label class="input-group-text" for="inputGroupFile01">
          <%= form.label :header_picture %>
        </label>
        <%= form.file_field :header_picture, accept: 'image/jpeg,image/gif,image/png', 
                      class: "form-control", id: "inputGroupFile01" %>
      </div>
  </div>
  
  <div class="actions pt-2">
    <%= form.submit class: "btn btn-sm btn-outline-dark" %>
  </div>
<% end %>

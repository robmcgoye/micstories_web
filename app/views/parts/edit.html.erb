<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h4>Editing part for <%= @story.short_title %></h4>
      <%= render 'form', part: @part, post_url: part_path(@part) %>
      <div class="btn-group p-2">
        <%= link_to "Delete", part_path(@part), class: "btn btn-sm btn-outline-dark", 
                    method: :delete, 
                    data: { confirm: "Are you sure? This will delete ALL chats associated to this part too." } %>
        <%= link_to "Back to Story",back_to_story_path(@story.id), class: "btn btn-sm btn-outline-dark" %> 
      </div>
    </div>
  </div>
</div>

<div class="container py-3">
  <div class="card mb-3 shadow-lg rounded border">
    <div class="card-body text-dark">
      <h4>New part for <%= @story.short_title %></h4>
      <%= render 'form', part: @part, post_url: chapter_parts_path(@chapter) %>
      <div class="btn-group p-2">
        <%= link_to "Back to Story", back_to_story_path(@story.id), class: "btn btn-sm btn-outline-dark" %> 
      </div>
    </div>
  </div>
</div>
